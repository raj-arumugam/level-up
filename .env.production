# Production Environment Configuration
# Copy this file to .env and update with your production values

# Database Configuration
POSTGRES_DB=portfolio_tracker_prod
POSTGRES_USER=portfolio_user_prod
POSTGRES_PASSWORD=your-secure-database-password-change-this
DATABASE_URL=postgresql://portfolio_user_prod:your-secure-database-password-change-this@postgres:5432/portfolio_tracker_prod

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-change-this
JWT_EXPIRES_IN=7d

# API Keys
ALPHA_VANTAGE_API_KEY=your-production-alpha-vantage-api-key
YAHOO_FINANCE_API_KEY=your-production-yahoo-finance-api-key

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=your-production-email@yourdomain.com
EMAIL_PASSWORD=your-production-email-password
EMAIL_FROM=Portfolio Tracker <noreply@yourdomain.com>

# Server Configuration
PORT=3001
NODE_ENV=production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Notification Settings
DAILY_UPDATE_CRON=0 9 * * *
NOTIFICATION_RETRY_ATTEMPTS=3

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-change-this
REDIS_URL=redis://:your-secure-redis-password-change-this@redis:6379

# Frontend Configuration
REACT_APP_API_URL=https://yourdomain.com/api

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Monitoring and Logging
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/app.log
ENABLE_REQUEST_LOGGING=true

# Security
CORS_ORIGIN=https://yourdomain.com
TRUST_PROXY=true
HELMET_ENABLED=true